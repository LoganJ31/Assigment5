@model CSCI213_Assignment5.Models.SongViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Songs" asp-action="Index" method="get">
    <p>

        <select asp-for="Genres" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <select asp-for="Artists" asp-items="Model.Artists">
            <option value="">All</option>
        </select>
        
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Inventory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Instrumental)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Songs!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrumental)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.SongID">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
